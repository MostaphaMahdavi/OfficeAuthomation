                    //    $(this).kendoProgressBar({
                    //        max: model.total,
                    //        value: (model.total - model.done)
                    //    });

                    //    $(this).find(".k-state-selected").each(function () {
                    //        $(this).css({
                    //            "background-color": "rgb(255, 189, 0)", "border-color": "rgb(255, 189, 0)"
                    //        });
                    //    });

                    //});


                },
                columns: [

                    {
                        field: "userName",
                        title: "نام کاربری",
