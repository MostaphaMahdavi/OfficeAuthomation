        }


        function statusisActive(e) {
            if (e) {
                return "فعال";
            } else {
                return "غیرفعال";
            }
        }


    </script>
    
    <script>
        function ShowModal(e) {

            e.preventDefault();
            e.stopPropagation();
            var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
 


            $.ajax({
                type: "get",
                url: "/AdminPanel/UserManager/ActiveOrDeActiveUser",
                data: { userId: dataItem.id}
            }).done(function(res) {
                $("#modal").modal('show');
                $(".myModal").html(res);
            });


        }
    </script>


